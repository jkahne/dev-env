#!/usr/bin/env bash

# script_dir="$( cd "$( dirname "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )"
script_dir=$(cd $(dirname "${BASH_SOURCE[0]}") && pwd)
filter=""
dry="0"
run_all="0"  # Flag to indicate if we should run all scripts

while [[ $# > 0 ]]; do
    echo "ARG: \"$1\""
    if [[ "$1" == "--dry" ]]; then
        dry="1"
    elif [[ "$1" == "--all" ]]; then
        run_all="1"
    else
        filter="$1"
    fi
    shift
done

log() {
    if [[ $dry == "1" ]]; then
        echo "[dry]: $@"
    else
        echo "$@"
    fi
}

execute() {
    if [[ $dry == "1" ]]; then
      log "[dry]: $@"
      return
    fi
    log "✅: $@"
    "$@"
}

log "$script_dir -- $filter"

cd $script_dir
# Get regular scripts
regular_scripts=$(find ./runs -mindepth 1 -maxdepth 1 -type f -exec test -x {} \; -print)

# Get excluded scripts (only used with --all flag)
excluded_scripts=$(find ./runs/excluded_by_default -mindepth 1 -maxdepth 1 -type f -exec test -x {} \; -print 2>/dev/null || echo "")

# Determine which scripts to process
if [[ "$run_all" == "1" ]]; then
    scripts="$regular_scripts $excluded_scripts"
else
    scripts="$regular_scripts"
fi

for script in $scripts; do
    # Check if script is from the excluded directory
    if [[ "$script" == *"/excluded_by_default/"* ]] && [[ "$run_all" != "1" ]]; then
        log "⏭️: $script (excluded)"
        continue
    fi
    
    if echo "$script" | grep -vq "$filter"; then
        log "❌: $script"
        continue
    fi

    execute $script
done
